<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/edit.css">
    <link rel="stylesheet" href="css/global.css">

    <link rel="stylesheet" href="css\CreateEdit Shop Design.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="images\browser.png"/>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="javascript\editProfile.js" type="text/javascript"></script>
    <script src="javascript/validator.min.js" type="text/javascript"></script>

    <title> Click & Ship  </title>

</head>

<body id="thebody" class="my_body d_flex">
    <div class="container-fluid m-0 p-0">
        
        {{>csnavbar usernameLink = usernameLink}}
    <div class="container-fluid">
        <div class="container-fluid">
        <img id="editProfilePic" src="{{userPic}}" alt="profile_pic"> 
        
        </div>
        <form id="editForm" class="mt-2 center" action="" method = "post" action = "/editProfile" enctype="multipart/form-data">
            <div id ="picContent" class = "center conatiner">
                <h5>Change Avatar</h5>
                <input name = "image" type="file" class="form-control" id="cpic" value = "{{userPic}}" onchange = "readURL(this)">
                
                {{!-- <button id = "submitBtn1" type="submit" class="btn btn-primary"> Change Avatar </button> --}}
                
            </div>

            <div id="editBox" class="container">
                        <div class="row mt-3">
                            <div class="col-sm-4"> <label class="form-label label"> Username: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " name="username" id="username" type="text" value="{{username}}">
                                <p id = "usernameError" class = "error">{{usernameError}}</p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"> <label class="form-label label"> First Name: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " name="fname" id="fname" type="text" value="{{fname}}">
                                <p id = "fNameError" class = "error">{{fNameError}}</p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"> <label class="form-label label"> Last Name: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " name="lname" id="lname" type="text" value="{{lname}}">    
                                <p id = "lNameError" class = "error">{{lnameError}}</p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"> <label class="form-label label"> E-mail: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " type="email"  name="email" id="email" value="{{email}}">
                                <p id = "emailError" class = "error">{{emailError}}</p>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4 "> <label class="form-label label"> Contact Number: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " type="number" name="contactno" id="contactno" value="{{contactno}}">
                                <p id = "telError" class = "error">{{telError}}</p>    
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm-4"> <label class="form-label label"> Address: </label>  </div>
                            <div class="col-sm-7"> 
                                <input  class="form-control " type="text" name="address" id="address" value="{{address}}"> 
                                <p id = "addressError" class = "error">{{addressError}}</p>   
                            </div>
                        </div>
    
                </div>
                <button id = "submitBtn3" type="submit" class="btn btn-primary" disabled> Submit Changes </button>
            </form>
    </div>
    
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#editProfilePic')
                        .attr('src', e.target.result)
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</body>

</html>