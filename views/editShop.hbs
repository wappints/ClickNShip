<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Click & Ship</title>

        <link rel="stylesheet" href="css\global.css">
        <link rel="stylesheet" href="css\CreateEdit Shop Design.css">
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="javascript\shopV.js" type="text/javascript"></script>
        <script src="javascript/validator.min.js" type="text/javascript"></script>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link rel="icon" type="image/png" href="images\browser.png"/>
    </head>

    <body id = "body" class = "d_flex">
        {{!-- <form action='/editShop' method="post" enctype="multipart/form-data">
            <input type='file' name='image'/>
            <input type="text" name="name">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form> --}}

        <div id = "header" class = "container-fluid">
            <h1 hidden id="_id">{{_id}}</h1>
            <br>
            <h1>
                {{#if shopName}}
                    Edit Shop
                {{else}}
                    Create Shop
                {{/if}}
            </h1>
        </div>

        <div class = "text-center">
            {{#if shopPic}}
            <img class = "img-fluid" id="shopPic" src="{{shopPic}}" alt="pieck"> 
            {{else}}
            <img class = "img-fluid" id="shopPic" src="images/browser.png" alt="temp"> 
            {{/if}}
        </div>

        <div id ="picContent" class = "center conatiner">
            <form class="row g-3" method = "post" action = "/editShop" id = "form"  enctype="multipart/form-data">

                <div class="text-center center row-md">
                    <label for="cpic" class="form-label">Profile Pic</label>
                    {{!-- <input type='file' name='image'/>    --}}
                    <input name = "image" type="file" class="form-control" id="cpic" value = "{{shopPic}}" onchange = "readURL(this)">
                </div>

        </div>


        <div id ="content" class = "center conatiner-md">

                <div class="center col-md-10">
                    <label for="sname" class="form-label">Shop Name</label>
                    <input name = "shopName" type="text" class="form-control inputBox" id="sname" value = "{{shopName}}" required>
                </div>
                <p class = "text-center" id = "shopNameError" class = "error">{{usernameErro}}</p>

                <div class="center col-10">
                    <label for="description" class="form-label">Description</label>
                    <textarea name = "description" class="form-control" id="description" placeholder="Insert Description">{{description}}</textarea>
                </div>

                <div class="col-12">
                    <input class="center form-control" type="submit" name="submit" id="submit" value = "SAVE">
                </div>
            </form>
        </div>

         <script>
                    function readURL(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();

                            reader.onload = function (e) {
                                $('#shopPic')
                                    .attr('src', e.target.result)
                            };

                         reader.readAsDataURL(input.files[0]);
                        }
                    }
                </script>
    </body>
</html> 