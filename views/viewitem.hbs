<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Click & Ship</title>

    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/quantity.css">

        
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type = "text/javascript" src="/javascript/shopfunc.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    
    <link rel="icon" type="image/png" href="/images/browser.png">
</head>

<body class="my_body">
   {{> csnavbar}}
   <div class="container-md my_item_container mt-3 mb-5">
        <a href="/home">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-circle back_button m-3" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
            </svg>
        </a>

        <div  id="_id" hidden>{{_id}}</div>
        <p hidden id ="userUpvote">{{userUpvote}}</p>
        <p hidden id ="userDownvote">{{userDownvote}}</p>

        <div class="row d-flex justify-content-center">
            {{!-- start big pic --}}
            <div class="col-lg-4 my_col justify-content-center mx-auto">
                <div class="product_pic">
                    <img src="{{itemPic}}" alt="{{itemName}}" class="product_pic">
                </div>
            </div>
            {{!-- end big pic --}}

            <div class="col-lg-5 col-md-6 my_col mx-auto">
                <div class="d-flex flex-column ">
                    <div class="p-2 flex-fill">
                        <h1  class="my_item_name mb-1" id="itemName">{{itemName}}</h1>
                    </div>
                    <div class="p-2 flex-fill my-1">
                        <a href="/shop/{{shopName}}" class="my_shop_name" id="{{shopName}}">{{shopName}}</a>
                    </div>

                    <div class="p-2 flex-fill">
                        <div class="d-flex">
                            <h5 id="upvote" value={{upvote}}>{{upvote}}</h5>
                            <span class="my_like m-0 p-0" id="my_like">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up-fill my_like mx-2" viewBox="0 0 16 16">
                                    <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"/>
                                </svg>
                            </span>
                           
                           <span class="my_unlike m-0 p-0" id="my_unlike"> 
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-down-fill my_unlike mx-2" viewBox="0 0 16 16">
                                    <path d="M6.956 14.534c.065.936.952 1.659 1.908 1.42l.261-.065a1.378 1.378 0 0 0 1.012-.965c.22-.816.533-2.512.062-4.51.136.02.285.037.443.051.713.065 1.669.071 2.516-.211.518-.173.994-.68 1.2-1.272a1.896 1.896 0 0 0-.234-1.734c.058-.118.103-.242.138-.362.077-.27.113-.568.113-.856 0-.29-.036-.586-.113-.857a2.094 2.094 0 0 0-.16-.403c.169-.387.107-.82-.003-1.149a3.162 3.162 0 0 0-.488-.9c.054-.153.076-.313.076-.465a1.86 1.86 0 0 0-.253-.912C13.1.757 12.437.28 11.5.28H8c-.605 0-1.07.08-1.466.217a4.823 4.823 0 0 0-.97.485l-.048.029c-.504.308-.999.61-2.068.723C2.682 1.815 2 2.434 2 3.279v4c0 .851.685 1.433 1.357 1.616.849.232 1.574.787 2.132 1.41.56.626.914 1.28 1.039 1.638.199.575.356 1.54.428 2.591z"/>
                                </svg>
                           </span>
                            
                            <h5 id="downvote">{{downvote}}</h5>
                            <h5 class="my_sold ms-4" id="numSold"> |   {{sold}} sold</h5>
                        </div>
                        
                    </div>

                    <div class="p-2 flex-fill col-md-6">
                        <h5 class="my_item_price" id="itemPrice"> â‚± {{itemPrice}}</h5>
                    </div>

                    <div class="p-2 flex-fill">
                        <h5 class="my_categ2" id="category">Category: {{category}}</h5>
                    </div>

                    <!-- START OF QTY -->
                    <div class=" d-flex justify-content-center my-auto flex-fill p-2 m-0">
                        <div class="d-flex flex-column my-auto flex-fill ">
                            <div class="row g-0">
                                <div class="col my_col my-auto">
                                    <div class="d-flex align-items-center justify-content-around">
                                        <h5 class="flex-fill">Quantity</h5>

                                        <form class="flex-fill">
                                            <div class="value-button" id="decrease" onclick="decreaseValue()" value="Decrease Value">-</div>
                                            <input type="number" id="number" value="0" class="mt-1 p-0"/>
                                            <div class="value-button" id="increase" onclick="increaseValue()" value="Increase Value">+</div>
                                          </form>
                                          <h6 class="my_stocks_avail flex-fill" id="stocks">{{stocks}} stocks available</h6>
                                    </div>
                                    
                                </div>

                            </div>
                            
                            <div class="row justiify-content-center">
                                <div class="col-12 flex">
                                    <button type="button" class="btn btn-warning add_to_cart mt-3" onclick="add_to_cart()">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END OF QTY -->
        
            </div>
        </div>

        <div class="row my-2 mt-5 g-0 p-2">
            <div class="col ">
                <div class="d-flex shop_name_container">
                    <img src="{{shopPic}}" alt="{{itemName}}" class="p-2 shop_pic ">
                    <div class="d-flex flex-column">
                        <h5 class="p-2">{{shopName}}</h5>
                        <a href="/shop/{{shopName}}">
                        <button type="button" class="btn btn-outline-secondary mx-2" >Visit Shop</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-2 g-0 p-2">
            <div class="col">
                <div class="flex-fill item_desc_container p-3">
                    <h5 class="pb-3">Item Description</h5>
                    <p> {{description}}</p>
                </div>
            </div>
        </div>

        <div class="flex flex-column" id="comments_section">
            <div class="row my-3">
                <div class="col m-0">
                    <h5>Comments</h5>
                </div>
            </div>

            {{!-- LOAD COMMENTS --}}

            {{#each comments}}
            <div class="row-lg-12">
                <div class="d-flex my-2 comment_container">
                    <img src="{{this.userPic}}" alt="{{this.username}}" class="comment_pic p-2">
                    <div class="d-flex flex-column p-2 flex-fill">
                        <div class="d-flex flex-fill p-1">
                            <div id="info1" hidden> 
                                {{this._id}}
                            </div>

                            <a href="/profile/{{this.username}}" class="comment_name me-auto">{{this.username}}                            
                            </a>
                            {{!-- <button type="button" class=" btn btn-secondary edit_del_btn">Edit</button> --}}

                             {{#IFEQUALS ../loggeduser this.username}}
                             <button type="button" class="btn btn-secondary edit_del_btn delete" >Delete</button>
                             {{/IFEQUALS}}
                        </div>
  
                        <p>{{this.comment}}</p>
                    </div>
                    
                </div>
                
            </div>
            {{/each}}

            
        </div>
        {{!-- Add Comment --}}



            <!-- COMMENT FIELD -->

            <div class="d-flex" >
                <form class="d-flex me-1">
                    <h1 hidden id="userPic"> {{userPic}}</h1>
                    <h1 hidden id="username">{{username}}</h1>
                    <h1 hidden id="itemID">{{_id}}</h1>
                    <input type="text" id="text_field" placeholder="What can you say about this product?" class="text_field">
                    <button type="button" id="comment" class="btn btn-secondary comment_btn mx-1">Comment</button>
                </form>
            </div>
            <!-- COMMENT FIELD -->

            {{!-- End Add Comment --}}
   </div>
    
    
    
    {{!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script> --}}
